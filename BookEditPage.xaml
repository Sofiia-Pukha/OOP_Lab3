<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab3.BookEditPage"
             Title="Edit Book"
             BackgroundColor="#F0F0F0">

    <Frame Margin="20" Padding="20" VerticalOptions="Center" BackgroundColor="White" CornerRadius="10">
        <VerticalStackLayout Spacing="15">
            <Label Text="Edit Book Info" FontSize="20" HorizontalOptions="Center" FontAttributes="Bold"/>

            <Entry x:Name="TitleEntry" Placeholder="Title" />
            <Entry x:Name="AuthorEntry" Placeholder="Author" />
            <Entry x:Name="GenreEntry" Placeholder="Genre" />
            <Entry x:Name="YearEntry" Placeholder="Year" Keyboard="Numeric" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0" Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="Gray"/>
                <Button Grid.Column="1" Text="Save" Clicked="OnSaveClicked" BackgroundColor="Green"/>
            </Grid>
        </VerticalStackLayout>
    </Frame>

</ContentPage>